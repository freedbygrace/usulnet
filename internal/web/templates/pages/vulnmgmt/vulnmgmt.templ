func vulnSLAColor(pct float64) string {
	if pct >= 90 {
		return "text-green-400"
	} else if pct >= 70 {
		return "text-yellow-400"
	}
	return "text-red-400"
}

func vulnBarWidth(value, total int) int {
	if total <= 0 {
		return 0
	}
	w := (value * 120) / total
	if w < 2 {
		w = 2
	}
	return w
}
