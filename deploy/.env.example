# =============================================================================
# usulnet - Docker Compose Environment
# =============================================================================
#
# These variables are used by docker-compose.yml for service configuration.
# Application settings (JWT, encryption, etc.) are in config.yaml.
#
# =============================================================================

# ============================================
# REQUIRED: Change before production
# ============================================

# PostgreSQL database password
# Generate with: openssl rand -base64 24 | tr -dc 'a-zA-Z0-9' | head -c 32
DB_PASSWORD=CHANGE_ME_GENERATE_RANDOM_PASSWORD

# ============================================
# Optional: Adjust as needed
# ============================================

# usulnet version (Docker image tag)
USULNET_VERSION=latest

# HTTP/HTTPS ports
USULNET_HTTP_PORT=8080
USULNET_HTTPS_PORT=7443

# Database settings
DB_USER=usulnet
DB_NAME=usulnet

# Host terminal (allows terminal access to the Docker host)
HOST_TERMINAL_ENABLED=true
HOST_TERMINAL_USER=nobody
